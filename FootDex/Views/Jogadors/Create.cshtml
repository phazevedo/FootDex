                <div class="dados-jogador">
                    <p class="titulo-setores">Ataque</p>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Finalizacao, htmlAttributes: new { @class = "control-label" })

                        @Html.EditorFor(model => model.Finalizacao, new { htmlAttributes = new { @class = "form-control", min = "1", max = "99" } })
                        @Html.ValidationMessageFor(model => model.Finalizacao, "", new { @class = "text-danger" })

                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Cabeceio, htmlAttributes: new { @class = "control-label" })

                        @Html.EditorFor(model => model.Cabeceio, new { htmlAttributes = new { @class = "form-control", min = "1", max = "99" } })
                        @Html.ValidationMessageFor(model => model.Cabeceio, "", new { @class = "text-danger" })

                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Dibre, htmlAttributes: new { @class = "control-label" })

                        @Html.EditorFor(model => model.Dibre, new { htmlAttributes = new { @class = "form-control", min = "1", max = "99" } })
                        @Html.ValidationMessageFor(model => model.Dibre, "", new { @class = "text-danger" })

                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Velocidade, htmlAttributes: new { @class = "control-label" })

                        @Html.EditorFor(model => model.Velocidade, new { htmlAttributes = new { @class = "form-control", min = "1", max = "99" } })
                        @Html.ValidationMessageFor(model => model.Velocidade, "", new { @class = "text-danger" })

                    </div>
                </div>
            </div>
        </div>
       

        <div class="form-group">
            <div class="col-xs-4">
                @Html.ActionLink("<< Voltar", "Index")
            </div>
            <div class="col-xs-offset-7 col-xs-1">
                <input type="submit" value="Cadastrar" class="btn btn-success cadastrar" />
            </div>
        </div>
    </div>
